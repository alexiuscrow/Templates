delimiters "$", "$"

typeInitMap ::= [
        "int":"0",
        "long":"0",
        "float":"0.0",
        "double":"0.0",
        "boolean":"false",
        "byte":"0",
        "short":"0",
        "char":"0",
        default:"null" // anything other than an atomic type
]

NewsLetter(title, mainContent, btnText, btnLink, headImageURL) ::= <<
<html>
  <body style="font-family: &quot;Segoe UI&quot;, san-serif;margin: 0">
    <div id="header" style="text-align: center;background-color: #ff950e;background-image: url('$headImageURL$');height: 100px;margin: 0;overflow: hidden;width: 100%">
        <div id="title" style="padding-top: 24px;color: white;font-size: 24pt">$title$</div>
    </div>
    <div id="content-wrapper" style="text-align: justify;padding: 20px">
        <p style="margin-top: 0; color: #000;">$mainContent$</p>
        <a id="read-more-btn" href="$btnLink$" style="border: 0;background-color: #ff950e;color: #fff;border-radius: 2.5px;padding: 10px;width: 100px;margin: 0 auto;display: block;text-align: center;text-decoration: none;cursor: pointer">$btnText$</a>
    </div>
</body>
</html>
>>